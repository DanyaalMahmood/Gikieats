// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  regno    String @id @default(uuid())
  name     String
  hostel   Int
  email    String @unique
  phoneno  String
  password String
  orders   Order[]
}

model Vendor {
  id       String @id @default(uuid())
  name     String
  password String
  phoneno  String
  items    Item[]
  riders   Rider[]
  orders   Order[]
}

model Item {
  id           String @id @default(uuid())
  name         String
  description  String
  image        String
  price        Int
  availability String
  vendor       Vendor @relation(fields: [vendorid], references: [id])
  vendorid     String
  category     String
  Orders       OrderItem[]
}

model OrderItem {
  id            String @id @default(uuid())
  order_id      String
  item          String
  quantity      String
  orderid_fk    Order @relation(fields: [order_id], references: [id])
  itemId_fk     Item @relation(fields: [item], references: [id])
}

model Order {
  id             String  @id @default(uuid())
  assigned       String  @default("22")
  status         String
  userid         String
  ordertime      DateTime? @default(now())
  vendorid       String
  vendor_fk      Vendor @relation(fields: [vendorid], references:[id])
  assigned_fk    Rider  @relation(fields: [assigned], references: [id])
  userid_fk      User  @relation(fields: [userid], references: [regno])
  orderitems     OrderItem[]
  
}

model Rider {
  id             String @id @default(uuid())
  name           String
  phoneno        String
  vendorid       String
  vendorid_fk    Vendor @relation(fields: [vendorid], references: [id])
  assigned       Order[]
}
