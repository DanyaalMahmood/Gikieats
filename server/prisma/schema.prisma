// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  regno    String @id @default(uuid())
  name     String
  hostel   Int
  email    String @unique
  phoneno  String
  password String
  orders   Order[]
}

model Vendor {
  id       String @id @default(uuid())
  name     String
  password String
  phoneno  String
  items    Item[]
  menus    Menu[]
  orders   Order[]
}

model Item {
  id           String @id @default(uuid())
  name         String
  description  String
  image        String
  price        Int
  availability String
  vendor       Vendor @relation(fields: [vendorid], references: [id])
  vendorid     String
  category     String
}

model Menu {
  id           String @id @default(uuid())
  name         String
  description  String
  image        String
  price        Int
  vendorid_fk  Vendor  @relation(fields: [vendorid], references: [id])
  vendorid     String
  availability String
  orders       Order[]
}

model Order {
  id             String  @id @default(uuid())
  assigned       String
  states         String
  item_id        String
  quantity       String
  userid         String
  timestamp      DateTime @default(now())
  assigned_fk    Vendor  @relation(fields: [assigned], references: [id])
  item_id_fk     Menu  @relation(fields: [item_id], references: [id])
  userid_fk      User  @relation(fields: [userid], references: [regno])
}
